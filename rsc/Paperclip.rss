		// project:
		HOTKEY { key='n'; command=EPaperclipCmdNewProject; },
		HOTKEY { key='o'; command=EPaperclipCmdOpenProject; },
		HOTKEY { key='e'; command=EEikCmdExit; },
		// file:
		HOTKEY { key='s'; command=EPaperclipCmdSaveFileAs; },
